.1u3d.videoview {
  background-repeat:no-repeat;
  background-size: cover;
  width: 100%;
  height: 100%;
}

.1u3d .pusher-box {
	position: relative; 
	display: block; 
	overflow: hidden;
  width: 33.75vw;
	height: 60vw; 
	text-align: center;
  vertical-align: top;
  margin: 0 auto 2vw;
}

.1u3d live-pusher {
  width: 100%;
	height: 100%; 
}

.1u3d .player-box {
	display:flex;
  justify-content: center;
}

.1u3d .player-box .player-item {
  position: relative; 
	display: inline-block; 
	overflow: hidden;
  width: 16.875vw;
	height: 30vw; 
	text-align: center;
  vertical-align: top;
  margin: 0 4vw;
}

.1u3d .poster {
	position: absolute;  
    width: 100%;
	height: 100%; 
	background-color: #000;
  opacity:0.55;
}
.1u3d .set {
  position: absolute;
  width: 32px;
  height: 56px;
  top: 50%;
  left: 50%;
  margin: -28px 0 0 -16px;
}

.1u3d live-player {
  width: 100%;
	height: 100%; 
}

.1u3d .character {
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 16px;
  color: #999;
  width: 100%;
  height: 10vw;
  line-height: 10vw;
  text-align: left;
}

.1u3d .loading {
  position: absolute;
  width: 100%;  
  height: 100%; 
}

.1u3d .loading cover-image {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}

